  "version": "0.2.0",
  "configurations": [
    {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "node API",
      "program": "${workspaceFolder}/src/server/app.js",
      "envFile": "${workspaceFolder}/src/server/.env",
      "request": "launch",
      "restart": true,
      "stopOnEntry": false,
      "runtimeExecutable": "nodemon",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
